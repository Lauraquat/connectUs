{% extends 'base.html.twig' %}

{% block title %}Candidate{% endblock %}

{% block body %}
    <h1>Candidate</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidate.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ candidate.city }}</td>
            </tr>
            <tr>
                <th>SearchedPost</th>
                <td>{{ candidate.searchedPost }}</td>
            </tr>
            <tr>
