{{ form_start(form) }}
<div class="containerNewForm">
    <h2 class="subtitleNewProfile">{% trans %}General informations{% endtrans %}</h2>

    <div class="formRow">
        <div class="cityInput">
            {{ form_label(form.city) }}
            {{ form_widget(form.city)}}
            {{ form_errors(form.city)}}
        </div>
        <div class="cityInput">
            {{ form_label(form.postalCode) }}
            {{ form_widget(form.postalCode) }}
            {{ form_errors(form.postalCode) }}
        </div>
    </div>

    <div class="formRow">
        <div class="formCreateNew">
            {{ form_label(form.searchedPost) }}
            {{ form_widget(form.searchedPost) }}
            {{ form_errors(form.searchedPost) }}
        </div>
        <div class="formCreateNew">
            {{ form_label(form.disponibility) }}
            {{ form_widget(form.disponibility) }}
            {{ form_errors(form.disponibility) }}
        </div>
    </div>

    <div class="cityInput">
        {{ form_label(form.CV) }}
        {{ form_widget(form.CV) }}
        {{ form_errors(form.CV) }}

        {% if candidate.CV is not null %}
            {{ candidate.CV }}
        {% endif %}
    </div>
</div>

<div class="formFooter">
    <button class="btn createProfile">{{ button_label|default('Save') | trans }}</button>
</div>
{{ form_end(form) }}
