{% extends 'base.html.twig' %}

{% block title %}Recruter{% endblock %}

{% block body %}

    <div class="containerIndex">
            <div class="titleAndButton">
                <h1 class="titleIndex">{{app.user.getName()}}</h1>
                <a class="btn profileButton" href="{{ path('app_recruter_index') }}">back to list</a>
            </div>
            <div class="containerCardShow">
                <div class="containerNewForm">
                    <h2 class="subtitleNewProfile">General informations </h2>
                    <div class="informationRow">
                        <div>
                            <p class="titleInformationShow">Company name </p>
                            {{recruter.companyName}}
                        </div>
                        <div>
                            <p class="titleInformationShow">Domain </p>
                            {{ recruter.domain}}
                        </div>
                    </div>
                </div>
                <div class="containerNewForm">
                    <h2 class="subtitleNewProfile">Address </h2>
                    <div class="informationRow">
                        <div>
                            <p class="titleInformationShow">Address </p>
                            {{recruter.address}}
                        </div>
                        <div>
                            <p class="titleInformationShow">Address Complement </p>
                            {{ recruter.address2}}
                        </div>
                    </div>
                    <div class="informationRow">
                        <div>
                            <p class="titleInformationShow">City </p>
                            {{recruter.city}}
                        </div>
                        <div>
                            <p class="titleInformationShow">Postal code</p>
                            {{ recruter.postalCode}}
                        </div>
                    </div>
                    
                </div>
                    <div class="containerNewForm">
                        <h2 class="subtitleNewProfile">Contacts </h2>
                        <div class="informationRow">
                            <div>
                                <p class="titleInformationShow">Email </p>
                                {{app.user.email}}
                            </div>
                            <div>
                                <p class="titleInformationShow">Phone number </p>
                                {{ app.user.phoneNumber }}
                            </div>
                        
                        </div>            
                    </div>
            </div>
        </div>

